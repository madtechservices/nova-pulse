{
    "name": "madtechservices/nova-pulse",
    "description": "A Laravel Nova tool for integrating Laravel Pulse.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Matt Horsley",
            "email": "matt@madtechservices.com.au"
        }
    ],
    "require": {
        "php": "^8.1",
        "laravel/nova": "^4.0",
        "laravel/framework": "^11.0",
        "laravel/pulse": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Madtechservices\\NovaPulse\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Madtechservices\\NovaPulse\\ToolServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}